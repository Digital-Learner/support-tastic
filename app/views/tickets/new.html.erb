<%= form_for @ticket do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <p>
    <%= f.text_field :name, placeholder: "Your name" %>
  </p>

  <p>
    <%= f.text_field :email, placeholder: "Your email address" %>
  </p>

  <p>
    <%= f.select(:department_id, @departments.collect { |d| [d.name, d.id] }, { prompt: '-select-' }) %>
  </p>

  <p>
    <%= f.text_field :subject, placeholder: "Nature of enquiry" %>
  </p>

  <p>
    <%= f.text_area :detail, rows: 10, placeholder: "Please enter a detailed description" %>
  </p>

  <%= f.submit class: 'button small round' %>
<% end %>
