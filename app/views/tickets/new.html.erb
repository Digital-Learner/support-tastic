<%= form_for @ticket do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: "Your name" %>
  <%= f.label :email %>
  <%= f.text_field :email, placeholder: "Your email address" %>
  <%= f.label :subject %>
  <%= f.text_field :subject, placeholder: "Nature of enquiry" %>
  <%= f.label :detail %>
  <%= f.text_area :detail, rows: 10, placeholder: "Please enter a detailed description" %>

  <%= f.submit %>
<% end %>
