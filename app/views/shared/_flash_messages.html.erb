<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div data-alert class="alert-box <%= foundation_alert_type(name) %> round rails-flash">
      <%= msg %>
      <%= link_to("x", "#", class: 'close') %>
    </div>
  <% end %>
<% end %>
<% if flash.empty? %>
  <div class='alert-empty'></div>
<% end %>
